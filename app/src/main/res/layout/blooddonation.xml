<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/red"
            android:padding="20dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/person_"
                android:src="@drawable/person"
                android:layout_marginLeft="-20dp"
                />


            <TextView
                android:id="@+id/donName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/person_"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Uzair" />
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/donbloodgroup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/red"
                    android:textSize="25dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_alignParentRight="true"
                    android:text="A-"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_house_24"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="12dp"
                android:text="Mehmoodabad" />

            <TextView
                android:id="@+id/donCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/donAddress"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:textSize="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_baseline_location_city_24"
                android:text="Karachi" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="call"
                android:background="@drawable/round"
                app:icon="@drawable/call"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:id="@+id/doncallbtn"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>